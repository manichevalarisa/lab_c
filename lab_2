#include <stdio.h>

int main()
{
    int n, i, a; //Вводим переменные
    int sum = 0; //объявляем переменную для счетчика
    printf("Введите значение длины массива \n");
    scanf ("%d", &n);//узнаем длину массива
    int list[n];//Вводим массив
    for ( i = 0; i < n; i ++) {
      printf("Введите значения в массив: \n");
      scanf ("%d", &a);//вводим значения
      list[0] = a; //записываем значение в массив
      if (a % 2 == 0) { //проверяем, четное ли число
          sum ++; //обновляем счетчик
      };
    };
    printf ("Количество четных чисел: %i", sum);//выводим результат
}
